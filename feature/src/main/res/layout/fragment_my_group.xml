<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_my_group"
            layout="@layout/view_toolbar"
            app:title="@{@string/my_group_title}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_group_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_radius_8"
            android:backgroundTint="@color/green1"
            android:paddingHorizontal="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_my_group">

            <TextView
                android:id="@+id/tv_my_group_create"
                style="@style/TextAppearance.Kkumul.label_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="모임 생성일"
                android:textColor="@color/gray4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_group_devide"
                style="@style/TextAppearance.Kkumul.label_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingTop="25dp"
                android:text="|"
                android:textColor="@color/gray4"
                app:layout_constraintStart_toEndOf="@id/tv_my_group_create"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_group_create_date"
                style="@style/TextAppearance.Kkumul.label_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingTop="25dp"
                android:text="2024.06.01"
                android:textColor="@color/gray4"
                app:layout_constraintStart_toEndOf="@id/tv_my_group_devide"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_group_meet_up"
                style="@style/TextAppearance.Kkumul.body_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="이 모임의 꾸물이들은 "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_my_group_create" />

            <TextView
                android:id="@+id/tv_my_group_meet_up_count"
                style="@style/TextAppearance.Kkumul.body_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3번"
                android:textColor="@color/main_color"
                app:layout_constraintStart_toEndOf="@id/tv_my_group_meet_up"
                app:layout_constraintTop_toBottomOf="@id/tv_my_group_create" />

            <TextView
                android:id="@+id/tv_my_group_meet"
                style="@style/TextAppearance.Kkumul.body_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingBottom="25dp"
                android:text=" 만났어요!"
                app:layout_constraintStart_toEndOf="@id/tv_my_group_meet_up_count"
                app:layout_constraintTop_toBottomOf="@id/tv_my_group_create" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_kkumul"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_my_group_meet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_my_group_participate_people"
            style="@style/TextAppearance.Kkumul.body_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="모임 참여 인원"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_my_group_detail" />

        <TextView
            android:id="@+id/tv_my_group_participate_people_count"
            style="@style/TextAppearance.Kkumul.body_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text=" 20"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toEndOf="@id/tv_my_group_participate_people"
            app:layout_constraintTop_toBottomOf="@id/cl_my_group_detail" />

        <TextView
            android:id="@+id/tv_my_group_participate"
            style="@style/TextAppearance.Kkumul.body_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="명"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toEndOf="@id/tv_my_group_participate_people_count"
            app:layout_constraintTop_toBottomOf="@id/cl_my_group_detail" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_right_black_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_my_group_detail" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_my_group_friend_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_my_group_participate_people_count"
            tools:listitem="@layout/item_my_group_friend" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_my_group_remain_meet_up"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/shape_gray0_rect_top_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_my_group_friend_list">

            <TextView
                android:id="@+id/tv_check_remain_meet_up"
                style="@style/TextAppearance.Kkumul.body_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="27dp"
                android:text="남은 약속을 확인해 보세요!"
                android:textColor="@color/gray7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_my_group_meet_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_check_remain_meet_up"
                tools:listitem="@layout/item_my_group_remain_meet_up" />

            <include
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_check_remain_meet_up"
                android:id="@+id/view_my_group_meet_up_empty"
                layout="@layout/view_my_group_meet_up_empty"
                android:layout_marginHorizontal="14dp"
                android:visibility="gone" />


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/extended_fab"
                style="@style/CustomMyGroupFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/main_color"
                android:gravity="center_vertical"
                android:text=" +  약속추가"
                android:textAppearance="@style/TextAppearance.Kkumul.body_01"
                android:textColor="@color/white0"
                app:iconPadding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
