<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Kkumul" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/gray8</item>
        <!--        <item name="colorPrimaryVariant">@color/secondary</item>-->
        <item name="android:windowBackground">@color/white0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white0</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="snackbarStyle">@style/CustomSnackBar</item>-->
    </style>

    <style name="Theme.Kkumul" parent="Base.Theme.Kkumul" />

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomMyGroupFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="shapeAppearance">@style/CustomExtendedFabShape</item>
    </style>

    <style name="CustomExtendedFabShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

</resources>
